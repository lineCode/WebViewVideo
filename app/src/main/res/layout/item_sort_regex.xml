<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="@dimen/dp5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_bg"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp10">

        <TextView
            android:id="@+id/isr_show_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp10"
            android:layout_toLeftOf="@+id/isr_sort_tv"
            android:lines="1"
            android:padding="@dimen/dp5"
            android:text=""
            android:textColor="@color/regex_title_color"/>

        <TextView
            android:id="@+id/isr_sort_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_list_slt"/>
    </RelativeLayout>


</LinearLayout>