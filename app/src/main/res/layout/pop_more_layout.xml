<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_pop_menu_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <Button
            android:id="@+id/refresh_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="刷新"
            android:textColor="@color/pop_text_color" />

        <Button
            android:id="@+id/clear_cookie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="清除Cookie"
            android:textColor="@color/pop_text_color" />

        <Button

            android:id="@+id/save_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="保存网址"
            android:textColor="@color/pop_text_color" />

        <Button
            android:id="@+id/go_regex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="匹配规则"
            android:textColor="@color/pop_text_color" />

        <Button
            android:id="@+id/user_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="使用说明"
            android:textColor="@color/pop_text_color" />

        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp10"
            android:text="退出程序"
            android:textColor="@color/pop_text_color" />

    </LinearLayout>
</ScrollView>